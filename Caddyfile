keykammer.com, www.keykammer.com {
    # Serve binaries from dist folder
    handle /dist/* {
        root * /opt/keykammer
        file_server
    }

    # Proxy API and health endpoints to discovery server
    handle /api/* {
        reverse_proxy localhost:53952
    }

    handle /health {
        reverse_proxy localhost:53952
    }

    # Serve static website from docs folder (must be last)
    root * /opt/keykammer/docs
    file_server
}
